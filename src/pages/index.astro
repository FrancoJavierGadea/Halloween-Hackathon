---
import MaskPlayground from "@/react/MaskPlayground.jsx";
import SKELETON from "@assets/sketon-loader/index.js";
import Home from "@components/Home.astro";
import Layout from "@layouts/Layout.astro";
import OverlayPlayground from "@react/OverlayPlayground.jsx";



export const prerender = true;


---

<Layout title="Halloween Hackathon">

	<main class="container">
		
		<Home />

		<section>

			<h2>Real Masks</h2>

			<OverlayPlayground client:only="react" />

		</section>

		<section>

			<h2>AI-Generated Masks</h2>


			<MaskPlayground client:only="react" />

		</section>

	</main>
	
</Layout>

<style>

	section {
		min-height: 300px;
		margin-block: 100px;

		h2 {
			font-family: var(--texts-font);
			font-weight: bold;
			letter-spacing: 5px;
			margin-bottom: 50px;
			padding-block: 10px;
			border-bottom: 1px solid var(--halloween-orange-color, orange);
		}

		animation-name: fadein;
		animation-duration: 1s;
		animation-delay: 1s;
		animation-timing-function: ease-in;
		animation-fill-mode: backwards;
	}

	@keyframes fadein {
		
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
</style>
