---
import SKELETON from "@assets/sketon-loader/index.js";

const link = 'https://cloudinary.com/blog/cloudinary-cloudcreate-spooky-ai-hackathon';
---

<section>

    <img src={SKELETON.at(0)} />
    
    <div>
        <p>
            This project was created for the <a href={link} target="_blank">Cloudinary</a> <span>Halloween</span> Hackathon 2024
        </p>
        
        <p>Explore and try out amazing Halloween masks, either with overlays or AI-generated ones!</p>  
    </div>


</section>

<style>

    section {
        padding-block: 50px;
        min-height: 400px;
        
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        align-items: center;
        justify-content: center;

        

        & img {
            height: 350px;
        }

        
        & p {
            text-align: center;
            font-size: clamp(16px, 3vw, 20px);
            max-width: 60ch;
            font-family: var(--texts-font);
            margin-bottom: 30px;
            letter-spacing: 3px;
            text-shadow: 1px 1px 5px #000000;
            line-height: 1.9;
        }

        a {
            color: var(--halloween-orange-color, orange);
            text-decoration: none;
            font-weight: 600;
        }

        span {
            font-family: var(--creepy-font);
            font-size: 1.2em;
            letter-spacing: 3px;
        }
    }

</style>