---
import backgroundImage from "@assets/background.lnkspace.svg?url";
---


<div class="Background">

    <img src={backgroundImage} alt="">

    <div class="Background-content">

        <slot />

    </div>
</div>


<style>

    .Background {

        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr;

        width: 100vw;
        height: 100vh;

        & > * {
            grid-row-start: 1;
            grid-column-start: 1;
        }

        & img {
            display: block;
            width: 100%;
            height: 100%;
            object-fit: cover;
            min-width: 0px;
            min-height: 0px;
        }

        & .Background-content {
            width: 100%;
            height: 100%;
            overflow: auto;
        }
    }
</style>